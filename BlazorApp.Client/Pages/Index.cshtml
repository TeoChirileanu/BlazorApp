@page "/"
@inject HttpClient http

<h1>Wanna play a game?</h1>

<div>
    <label for="@Number">Enter your number:</label>
    <input id="myInput" bind="@Number" placeholder="Good Luck!"/>
</div>

<div>
    <button id="myButton" onclick="@(async () => await CheckNumber())">Check</button>
    @if (!string.IsNullOrWhiteSpace(Message)) {
        @Message
    }
</div>

@functions {
    public string Number { get; set; }
    public string Message { get; set; }

    public async Task CheckNumber() {
        var response = await http.GetAsync($"/api/game/checknumber/{Number}").ConfigureAwait(false);
        Message = await response.Content.ReadAsStringAsync();
        StateHasChanged();
    }

}